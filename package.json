{
  "name": "hush-hush",
  "description": "Feature flagging for when you need to keep it hush-hush.",
  "version": "1.0.0-alpha.2",
  "author": "John Flesch <john@fles.ch>",
  "bugs": {
    "url": "https://github.com/flesch/hush-hush/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "filter-objects": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.6.0",
    "browserify": "^13.0.1",
    "uglify-js": "^2.7.0"
  },
  "homepage": "https://github.com/flesch/hush-hush#readme",
  "keywords": [
    "beta",
    "feature",
    "flag",
    "secret",
    "switch",
    "toggle"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flesch/hush-hush.git"
  },
  "scripts": {
    "bundle": "browserify dist/index.js --standalone features -o releases/$npm_package_name-$npm_package_version.js",
    "compile": "babel index.js -o dist/index.js",
    "latest": "cp releases/$npm_package_name-$npm_package_version.js releases/$npm_package_name-latest.js",
    "postbundle": "uglifyjs releases/$npm_package_name-$npm_package_version.js -o releases/$npm_package_name-$npm_package_version.min.js",
    "postlatest": "uglifyjs releases/$npm_package_name-latest.js -o releases/$npm_package_name-latest.min.js",
    "release": "npm run compile && npm run bundle && npm run latest"
  }
}
